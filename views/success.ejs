          <div class="col-md">
             <button class="button btn btn-info btn-lg" id="sbutton" type="sumbit" name="button">Submit</button>
          </div>
          <div class="col-md">
             <a class="button btn btn-lg" id="ebutton" href="mailto:nikhilpahal2001@gmail.com">Mail Us</a>
          </div>
       </div>
   </div>
</form>

